<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/root"
	android:background="@drawable/snow_320_480">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="45dip" android:background="#AA000000">
		<!-- 属性 -->
		<Button android:id="@+id/attribute" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_alignParentRight="true"
			android:layout_marginRight="10dip" style="@style/simple_button"
			android:layout_margin="5.0dip" android:text="属性" />

		<!-- 赚钱 -->
		<Button android:id="@+id/money" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_alignParentRight="true"
			android:layout_marginRight="10dip" style="@style/simple_button"
			android:layout_margin="5.0dip" android:text="赚钱" />

		<!-- 背包 -->
		<Button android:id="@+id/bag" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_alignParentRight="true"
			android:layout_marginRight="10dip" style="@style/simple_button"
			android:layout_margin="5.0dip" android:text="背包" />

		<!-- 消息 -->
		<Button android:id="@+id/msg" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_alignParentRight="true"
			android:layout_marginRight="10dip" style="@style/simple_button"
			android:layout_margin="5.0dip" android:text="消息" />

		<!-- 创建用户 -->
		<Button android:id="@+id/create" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_alignParentRight="true"
			android:layout_marginRight="10dip" style="@style/simple_button"
			android:layout_margin="5.0dip" android:text="new" />

	</LinearLayout>


	<RelativeLayout android:id="@+id/user_message"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/shape_5" android:paddingTop="10.0dip"
		android:paddingBottom="10.0dip">

		<TextView android:id="@+id/role" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
			style="@style/user_message" android:text="角色: 吃货" />

		<TextView android:id="@+id/id" android:layout_width="wrap_content"
			android:layout_marginLeft="10.0dip" android:layout_height="wrap_content"
			android:layout_toRightOf="@id/role" style="@style/user_message"
			android:text="id: 123456789" />

		<TextView android:id="@+id/rank" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
			android:layout_below="@id/role" style="@style/user_message"
			android:text="级别: 大牛级别" />

		<TextView android:id="@+id/wealth" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
			android:layout_toRightOf="@id/rank" android:layout_below="@id/id"
			style="@style/user_message" android:text="财富: 123456789" />
	</RelativeLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_weight="1"
		android:layout_height="fill_parent" android:gravity="center_horizontal">
		<ImageView android:id="@+id/animation_image"
			android:layout_width="224.0dip" android:layout_height="182.0dip"
			android:layout_gravity="center">
		</ImageView>
	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:background="@drawable/shape_3"
		android:layout_height="55.0dip" android:gravity="bottom|center_horizontal">
		<com.five.view.MenuView android:id="@+id/gridview"
			android:layout_width="fill_parent" android:layout_height="55.0dip"
			android:paddingTop="2.0dip" android:numColumns="5"
			android:verticalSpacing="10dip" android:horizontalSpacing="10dip"
			android:stretchMode="columnWidth" android:gravity="center" />
	</LinearLayout>
</LinearLayout>
