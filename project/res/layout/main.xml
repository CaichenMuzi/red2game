<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/root"
	android:background="@drawable/snow_320_480">

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="@drawable/shape_5">
		<!-- 设置 -->
		<Button android:id="@+id/bt_setting" android:layout_width="wrap_content"
			android:layout_height="30.0dip" style="@style/simple_button"
			android:layout_margin="5.0dip" android:text="设置"
			android:layout_gravity="center_vertical"
			android:layout_alignParentLeft="true" android:layout_centerVertical="true" />

		<RelativeLayout android:id="@+id/user_message"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingTop="10.0dip" android:paddingBottom="10.0dip"
			android:layout_toRightOf="@+id/bt_setting">

			<TextView android:id="@+id/role" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginLeft="5.0dip"
				style="@style/user_message" android:text="昵称:****" />

			<TextView android:id="@+id/id" android:layout_width="wrap_content"
				android:layout_marginLeft="20.0dip" android:layout_height="wrap_content"
				android:layout_toRightOf="@id/role" style="@style/user_message"
				android:text="经验:1234" />

			<TextView android:id="@+id/rank" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginLeft="5.0dip"
				android:layout_below="@id/role" style="@style/user_message"
				android:text="级别:********" />

			<TextView android:id="@+id/wealth" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginLeft="20.0dip"
				android:layout_toRightOf="@id/rank" android:layout_below="@id/id"
				style="@style/user_message" android:text="财富:1234" />
		</RelativeLayout>

		<!-- 帮助 -->
		<Button android:id="@+id/bt_help" android:layout_width="wrap_content"
			android:layout_height="30.0dip" android:layout_alignParentRight="true"
			android:layout_marginRight="10dip" style="@style/simple_button"
			android:layout_margin="5.0dip" android:text="帮助"
			android:layout_centerVertical="true" />
	</RelativeLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_weight="1"
		android:layout_height="fill_parent" android:gravity="center_horizontal">
		<ImageView android:id="@+id/animation_image"
			android:layout_width="224.0dip" android:layout_height="182.0dip"
			android:layout_gravity="center">
		</ImageView>
	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:background="@drawable/shape_5"
		android:layout_height="40.0dip" android:gravity="bottom"
		android:orientation="horizontal" android:layout_alignParentBottom="true">
		<!-- 社交 -->
		<Button android:id="@+id/attribute" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_alignParentRight="true"
			android:layout_marginRight="10dip" style="@style/simple_button"
			android:layout_margin="5.0dip" android:text="社\u0020交"
			android:layout_weight="1" />

		<!-- 地盘-->
		<Button android:id="@+id/money" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_alignParentRight="true"
			android:layout_marginRight="10dip" style="@style/simple_button"
			android:layout_margin="5.0dip" android:text="地\u0020盘"
			android:layout_weight="1" />

		<!-- 幻世界 -->
		<Button android:id="@+id/bag" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_alignParentRight="true"
			android:layout_marginRight="10dip" style="@style/simple_button"
			android:layout_margin="5.0dip" android:text="幻世界"
			android:layout_weight="1" />

		<!-- 返米箱 -->
		<Button android:id="@+id/msg" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_alignParentRight="true"
			android:layout_marginRight="10dip" style="@style/simple_button"
			android:layout_margin="5.0dip" android:text="返米箱 "
			android:layout_weight="1" />
	</LinearLayout>
</RelativeLayout>
