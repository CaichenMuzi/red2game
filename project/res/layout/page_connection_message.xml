<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/root"
	android:background="@drawable/snow_320_480">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="45dip" android:background="#AA000000">
		<!-- 返回 -->
		<Button android:id="@+id/button_back" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_alignParentRight="true"
			android:layout_marginRight="10dip" style="@style/simple_button"
			android:layout_margin="5.0dip" android:text="返\u0020回" />
		<!-- 修改信息 -->
		<Button android:id="@+id/button_leave_message"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:layout_alignParentRight="true" android:layout_marginRight="10dip"
			style="@style/simple_button" android:layout_margin="5.0dip"
			android:text="留\u0020言" />
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="95dip" android:background="@drawable/castle_msg_bg"
		android:layout_marginTop="5.0dip">
		<ImageView android:layout_width="75dip"
			android:layout_height="75dip" android:src="@drawable/head"
			android:background="@drawable/image_bg" android:padding="6.0dip"></ImageView>
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<TextView android:id="@+id/name" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginLeft="5.0dip"
				style="@style/castle_message" android:text="ID：百年孤独" />

			<TextView android:id="@+id/sign" android:layout_width="wrap_content"
				android:layout_marginLeft="5.0dip" android:layout_height="wrap_content"
				style="@style/castle_message" android:text="签名：人类所有的才能无非时间和内心的混合物～" />
		</LinearLayout>
	</LinearLayout>
	<ListView android:scrollbars="vertical"
		android:scrollbarThumbVertical="@drawable/scrollbar_drawable"
		android:listSelector="@drawable/list_item_bg" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/activity_list"
		android:cacheColorHint="#00000000" android:layout_weight="1.0" />
</LinearLayout>
