<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@drawable/snow_320_480">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="45dip" android:background="#AA000000">
		<!-- 返回 -->
		<Button android:id="@+id/bt_back" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_alignParentRight="true"
			android:layout_marginRight="10dip" style="@style/simple_button"
			android:layout_margin="5.0dip" android:text="返\u0020回" />

		<!-- 属性 -->
		<Button android:id="@+id/bt_attribute" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_alignParentRight="true"
			android:layout_marginRight="10dip" style="@style/simple_button"
			android:layout_margin="5.0dip" android:text="属\u0020性" />

	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="40.0dip"
		android:background="#AA000000" android:gravity="center_vertical">
		<TextView android:id="@+id/tv_name" android:layout_width="150dip"
			android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
			style="@style/user_message" android:text="昵称:****"
			android:layout_weight="1" />
		<TextView android:id="@+id/tv_level" android:layout_width="150dip"
			android:layout_marginLeft="10.0dip" android:layout_height="wrap_content"
			style="@style/user_message" android:text="级别:12级"
			android:layout_weight="1" />
	</LinearLayout>

	<LinearLayout android:id="@+id/relative_port"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginTop="10.0dip">
		<ImageView android:id="@+id/animation_man_image"
			android:layout_width="150.0dip" android:layout_height="150.0dip"
			android:layout_gravity="center" android:src="@drawable/nn_00">
		</ImageView>
		<LinearLayout android:id="@+id/relative_port"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="20.0dip" android:orientation="vertical">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" style="@style/user_message"
				android:text="亲密度：12" android:layout_gravity="center_horizontal" />
			<ImageView android:id="@+id/pet_image"
				android:layout_width="150.0dip" android:layout_height="150.0dip"
				android:layout_gravity="center" />
		</LinearLayout>
	</LinearLayout>

	<RelativeLayout android:id="@+id/relative_port"
		android:layout_width="fill_parent" android:layout_height="40dip"
		android:gravity="center_horizontal" android:layout_marginTop="20.0dip">
		<Button android:textColor="#ffffffff" android:gravity="center"
			android:id="@+id/bt_eat" android:layout_margin="5.0dip"
			android:background="@drawable/simple_button_background"
			android:layout_width="wrap_content" android:layout_height="30.0dip"
			android:text="喂\u0020食" />
		<Button android:textColor="#ffffffff" android:gravity="center"
			android:id="@+id/bt_play" android:layout_margin="5.0dip"
			android:background="@drawable/simple_button_background"
			android:layout_width="wrap_content" android:layout_height="30.0dip"
			android:text="挑\u0020斗" android:layout_toRightOf="@+id/bt_eat" />
		<Button android:textColor="#ffffffff" android:gravity="center"
			android:id="@+id/bt_tech" android:layout_margin="5.0dip"
			android:background="@drawable/simple_button_background"
			android:layout_width="wrap_content" android:layout_height="30.0dip"
			android:text="嗦\u0020使" android:layout_toRightOf="@+id/bt_play" />
	</RelativeLayout>
</LinearLayout>
