<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:orientation="vertical"
	android:id="@+id/loadingDialog_Base" android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<ProgressBar android:id="@+id/loadingDialog_ProgressBar"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerInParent="true" style="?android:attr/progressBarStyleSmall" />
		<TextView android:textSize="13.0sp" android:textStyle="bold"
			android:textColor="#ffffffff" android:id="@+id/loadingDialog_ProgressText"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="加载中..." android:layout_below="@id/loadingDialog_ProgressBar"
			android:layout_centerInParent="true" />
	</RelativeLayout>
</RelativeLayout>