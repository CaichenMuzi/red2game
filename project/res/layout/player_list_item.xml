<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/shape_5">
	<ImageView android:layout_width="75dip"
		android:layout_height="75dip" android:src="@drawable/head"
		android:background="@drawable/image_bg" android:padding="6.0dip"></ImageView>
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:id="@+id/player_name" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
			style="@style/user_message" android:text="玩家昵称: 昵称" />

		<TextView android:id="@+id/player_level"
			android:layout_width="wrap_content" android:layout_marginLeft="10.0dip"
			android:layout_height="wrap_content" style="@style/user_message"
			android:text="玩家级别: 12级" />

		<TextView android:id="@+id/player_attribute"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginLeft="10.0dip" style="@style/user_message"
			android:text="属性值: 金木水火土" />

	</LinearLayout>
</LinearLayout>