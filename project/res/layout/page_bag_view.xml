<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/root"
	android:background="@drawable/snow_320_480">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="45dip" android:background="#AA000000">
		<!-- 返回 -->
		<Button android:id="@+id/back" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_alignParentRight="true"
			android:layout_marginRight="10dip" style="@style/simple_button"
			android:layout_margin="5.0dip" android:text="返\u0020回" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:padding="5.0dip" android:gravity="center_vertical">
		<TextView android:id="@+id/boast" android:layout_width="wrap_content"
			android:layout_height="wrap_content" style="@style/msg_text"
			android:text="吹牛袋" />
		<GridView android:id="@+id/gridview" android:numColumns="4"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/castle_msg_bg" android:padding="10.0dip"
			android:verticalSpacing="10.0dip" android:horizontalSpacing="10.0dip"
			android:gravity="center"></GridView>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:paddingLeft="5.0dip" android:paddingRight="5.0dip"
		android:paddingBottom="5.0dip" android:gravity="center_vertical">
		<TextView android:id="@+id/weapon_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			style="@style/msg_text" android:text="武器表" />
		<ListView android:scrollbars="vertical"
			android:scrollbarThumbVertical="@drawable/scrollbar_drawable"
			android:listSelector="@drawable/list_item_bg" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:id="@+id/weapon_list_view"
			android:background="@drawable/castle_msg_bg" android:cacheColorHint="#00000000"
			android:layout_weight="1.0" />
	</LinearLayout>
</LinearLayout>
